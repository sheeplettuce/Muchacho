@{
    ViewData["Title"] = "Estadísticas de Albums";
}

<div class="container">

    <div class="form mb-3 d-flex justify-content-between align-items-center">
        <div>
            <a asp-controller="Music" asp-action="Index" class="btn btn-outline-warning">
                Volver 
            </a>
        </div>

        <div class="text-end">
            <strong>Tus ventas:</strong>
            <span class="badge bg-secondary">
                @($"${(((decimal?)ViewBag.UserSalesAmount) ?? 0m):F2}")
            </span>

            @if (ViewBag.CurrentUsuarioName != null)
            {
                <div class="small text-muted">Usuario: @ViewBag.CurrentUsuarioName</div>
            }
        </div>
    </div>

    <h2 class="mb-4">Estadísticas de Albums</h2>

    <!-- Resumen de estadísticas -->
    <div class="saleeditcontainer mb-4">
        <div class="card-body">
            <h5 class="card-title">Resumen General</h5>
            <ul class="list-unstyled">
                <li><strong>Total de álbumes:</strong> @ViewBag.TotalAlbums</li>
                <li><strong>Precio promedio:</strong> @($"${(((decimal?)ViewBag.PrecioPromedio) ?? 0m):F2}")</li>
                <li><strong>Total de precios:</strong> @($"${(((decimal?)ViewBag.PrecioTotal) ?? 0m):F2}")</li>
            </ul>

            <h6 class="mt-3">Álbumes por período (cada 5 años):</h6>
            <ul class="list-unstyled">
                @foreach (var periodo in ViewBag.AlbumsPorPeriodo)
                {
                    <li>@periodo.Key: <strong>@periodo.Value álbumes</strong></li>
                }
            </ul>
        </div>
    </div>

    <!-- Ranking de ventas por usuario -->
    <div class="mb-4">
        <h4>Ranking de ventas por usuario (monto total)</h4>
        <ol class="list-group list-group-numbered">
            @foreach (var r in ViewBag.Ranking)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@r.UserName</div>
                        <small class="text-muted">Usuario ID: @r.UserId • Ventas: @r.SalesCount</small>
                    </div>

                    <span class="badge bg-primary rounded-pill">
                        @($"${((decimal)r.TotalAmount):F2}")
                    </span>

                    @if (r.Rank == 1)
                    {
                        <span class="badge bg-warning ms-2">TOP 1</span>
                    }
                </li>
            }
        </ol>
    </div>

    <!-- Lista de álbumes -->
    <h4 class="mb-3">Álbumes (ordenados por fecha de lanzamiento)</h4>

    <div class="list-group">
        @foreach (var album in ViewBag.Albums)
        {
            <div class="list-group-item list-group-item-action">
                <div class="d-flex align-items-center">

                    <!-- IMAGEN -->
                    <img src="@album.CoverUrl"
                         alt="@album.Album"
                         class="img-thumbnail me-3"
                         style="width: 60px; height: 60px; object-fit: cover;">

                    <div class="flex-grow-1">
                        <h6 class="mb-1">@album.Album</h6>

                        <p class="mb-1 text-muted small">
                            <strong>@album.Artist</strong> • @album.Year
                        </p>
                    </div>

                    <div class="text-end">
                        <span class="badge bg-success">
                            @($"${((decimal)album.Price):F2}")
                        </span>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

<style>
    .list-group-item {
        transition: background-color 0.2s;
    }

        .list-group-item:hover {
            background-color: #A1A1A1;
        }

    .img-thumbnail {
        border-radius: 4px;
    }
</style>
